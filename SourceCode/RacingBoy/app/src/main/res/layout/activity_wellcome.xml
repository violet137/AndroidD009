<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_wellcom">

    <TextView
        android:id="@+id/txtWellcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="WELLCOME TO"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="@+id/iconRacing"
        app:layout_constraintStart_toStartOf="@+id/iconRacing"
        app:layout_constraintTop_toBottomOf="@+id/iconRacing" />

    <ImageView

        android:id="@+id/iconRacing"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/iconracing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNameAppGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="RACINGBOY GAME"
        android:textColor="#fff"
        android:textSize="34dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtWellcome"
        app:layout_constraintStart_toStartOf="@+id/txtWellcome"
        app:layout_constraintTop_toBottomOf="@+id/txtWellcome" />

    <Button
        android:id="@+id/btnToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/btnlogin"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Log In"
        app:layout_constraintEnd_toEndOf="@+id/txtNameAppGame"
        app:layout_constraintStart_toStartOf="@+id/txtNameAppGame"
        app:layout_constraintTop_toBottomOf="@+id/txtNameAppGame" />

    <Button
        android:id="@+id/btnToRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:text="Register"
        android:background="@drawable/btnlogin"
        app:layout_constraintEnd_toEndOf="@+id/btnToLogin"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@+id/btnToLogin"
        app:layout_constraintTop_toBottomOf="@+id/btnToLogin" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Or quick login with Tuoch ID"
        android:textColor="#fff"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/btnToRegister"
        app:layout_constraintStart_toStartOf="@+id/btnToRegister"
        app:layout_constraintTop_toBottomOf="@+id/btnToRegister" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/vantay150"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

</androidx.constraintlayout.widget.ConstraintLayout>