    <ImageView
        android:id="@+id/img_first_car"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintVertical_bias="1.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img_second_car"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/car_type_a"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/img_second_car"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_first_car"
        app:layout_constraintStart_toEndOf="@+id/img_first_car"
        app:layout_constraintTop_toTopOf="@+id/img_first_car"
        app:layout_constraintEnd_toStartOf="@id/img_third_car"
        android:layout_marginHorizontal="10dp"
        app:srcCompat="@drawable/car_type_a"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/img_third_car"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_second_car"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_second_car"
        app:layout_constraintTop_toTopOf="@+id/img_second_car"
        android:layout_marginHorizontal="10dp"
        app:srcCompat="@drawable/car_type_a"
        tools:src="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>