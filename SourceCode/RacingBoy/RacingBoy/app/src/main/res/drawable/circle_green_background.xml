<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="oval">

                    <solid android:color="@color/green"/>

                    <stroke android:width="@dimen/home_icon_stroke_width"
                        android:color="@color/white"/>
                </shape>
            </item>
            <item
                android:bottom="@dimen/home_icon_padding"
                android:top="@dimen/home_icon_padding"
                android:right="@dimen/home_icon_padding"
                android:left="@dimen/home_icon_padding"
                android:gravity="center"
                android:width="@dimen/home_icon_size"
                android:height="@dimen/home_icon_size"
                android:drawable="@drawable/ic_telephone" >
            </item>
        </layer-list>
    </item>
</selector>